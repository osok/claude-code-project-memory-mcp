# Claude Code Memory Service Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Voyage AI API Key (required for embeddings)
# Get your key from: https://www.voyageai.com/
VOYAGE_API_KEY=your-voyage-api-key-here

# Neo4j Password (required)
# Set a secure password for the Neo4j database
NEO4J_PASSWORD=your-secure-password-here

# Project Path (required)
# Path to the project directory to index and track
PROJECT_PATH=/path/to/your/project

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Qdrant Configuration
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
# QDRANT_API_KEY=                    # Only needed for Qdrant Cloud

# Neo4j Configuration
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_DATABASE=neo4j

# Voyage AI Configuration
# VOYAGE_MODEL=voyage-code-3         # Embedding model to use
# VOYAGE_BATCH_SIZE=128              # Max texts per API request

# Embedding Cache Configuration
# EMBEDDING_CACHE_PATH=.cache/embeddings.db
# EMBEDDING_CACHE_SIZE=10000         # Max cached embeddings
# EMBEDDING_CACHE_TTL_DAYS=30        # Cache entry lifetime

# Duplicate Detection Configuration
# DUPLICATE_THRESHOLD=0.85           # Similarity threshold (0.70-0.95)
# CONFLICT_THRESHOLD=0.95            # Conflict detection threshold (0.90-1.0)

# Logging Configuration
# LOG_LEVEL=INFO                     # DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_FORMAT=json                    # json or console
# LOG_FILE=                          # Optional log file path

# Metrics Configuration
# METRICS_ENABLED=true               # Enable Prometheus metrics
# METRICS_HOST=127.0.0.1             # HTTP server bind address (use 0.0.0.0 for Docker)
# METRICS_PORT=9090                  # HTTP server port for metrics/health

# Sync Configuration
# SYNC_INTERVAL_SECONDS=300          # Interval between sync checks (5 minutes)
# SYNC_MAX_RETRIES=3                 # Max retries for failed sync operations
# SYNC_RETRY_DELAY_SECONDS=60        # Delay between sync retries

# Normalization Configuration
# NORMALIZATION_BATCH_SIZE=1000      # Batch size for normalization
# SOFT_DELETE_RETENTION_DAYS=30      # Days to keep soft-deleted items

# Performance Configuration
# SEARCH_DEFAULT_LIMIT=10            # Default search result limit
# SEARCH_MAX_LIMIT=100               # Maximum search result limit
# GRAPH_MAX_DEPTH=5                  # Maximum graph traversal depth

# Fallback Embedding Configuration (optional local model)
# FALLBACK_EMBEDDING_ENABLED=false
# FALLBACK_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# DOCKER-SPECIFIC CONFIGURATION
# =============================================================================

# Qdrant log level for container
# QDRANT_LOG_LEVEL=INFO
